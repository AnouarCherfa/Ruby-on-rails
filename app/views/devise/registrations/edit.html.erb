<h2>Modifier votre profil <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group my-2">
    <%= f.label "Nouveau mot de passe" %><br />
    <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
  </div>

  <div class="field form-group">
    <%= f.label "Nouveau mot de passe" %><br />
    <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
  </div>

  <div class="field form-group my-2">
    <%= f.label "Mot de passe actuel" %><br />
    <%= f.password_field :current_password, class:"form-control", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Modifier", class:"btn btn-secondary" %>
  </div>
<% end %>

<br />

  <div>
  <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Vous etes sure?", turbo_confirm: "Vous etes sure?" }, method: :delete, class:"btn btn-danger" %>
  </div>

<%= link_to "Retour", :back %>
